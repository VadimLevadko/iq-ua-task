{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@features/*": ["src/features/*"],
      "@components/*": ["src/app/components/*"],
      "@pages/*": ["src/app/pages/*"]
    },
    "jsx": "react-jsx"
  }
}
